---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Footer from "../components/Footer.astro";
import Badge from "../components/Badge.astro";
---

<Layout title="Portfolio.">
	<main class="px-10">
		<SectionContainer id="top">
			<h1
				class="text-[#262f89] text-2xl md:text-4xl lg:text-5xl font-bold flex justify-start flex-row gap-x-2 pb-6 lg:pb-10"
			>
				Soy Fran García
			</h1>

			<h2 class="text-xl lg:text-2xl opacity-80 max-w-[700px]">
				Experiencia en
				<strong
					class="bg-gradient-to-b from-[#3744f4] via-[#2a33d8] to-[#3744f4] text-transparent bg-clip-text text-wrap"
				>
					Desarrollo de Aplicaciones
				</strong>
				para mi evolución como desarrollador. De Aspe, Alicante.
			</h2>

			<h2 class="text-2xl opacity-80 max-w-[700px] pt-2">
				<span class="text-white opacity-85">
					Buscando afrontar desafíos
				</span>
					en un nuevo proyecto que me brinde oportunidades de desarrollo profesional.
			</h2>

			<Badge />
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2
				class="mb-3 text-2xl font-semibold felx gap-x-2 text-[#262f89] max-w-[740px]"
			>
				Trabajo Independiente
			</h2>
			<Experience />
		</SectionContainer>
		<Footer />
	</main>
</Layout>
