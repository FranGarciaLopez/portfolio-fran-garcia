---
import "@fontsource-variable/comfortaa";

interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="relative w-full bg-[#7695ff]">
			<div
				class="absolute bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#7695ff2e_1px,transparent_1px),linear-gradient(to_bottom,#242da82e_1px,transparent_1px)] bg-[size:14px_24px]"
			>
			</div>
		</div>

		<Header />
		<slot />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}

	html {
		font-family:
			"Comfortaa Variable",
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		display: flex;
		flex-direction: column;
		background: #7695ff;
		align-items: center;
		min-height: 100vh;
	}


	@media (prefers-reduced-motioon: reduce) {
		html {
			scroll-behavior: auto;
		}
	}

	::selection {
		background-color: #2a33d8;
		color: white;
	}

	@keyframes reveal {
		0% {
			opacity: 0;
			transform: translateY(100%);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.reveal-animation {
		opacity: 0;
		animation: reveal 4s ease-out forwards;
		animation-timeline: view();
		animation-range: entry 10% cover 30%;
	}
</style>